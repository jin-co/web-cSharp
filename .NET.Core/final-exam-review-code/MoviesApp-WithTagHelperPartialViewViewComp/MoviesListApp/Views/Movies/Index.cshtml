@model List<Movie>
@{
    ViewData["Title"] = "All Movies";
}

<h1>@ViewData["Title"]</h1>
<a asp-controller="Movie" asp-action="Add">Add a new movie</a>
<div class="row">
    <table class="table table-bordered table-striped col-sm-9">
        <thead>
            <tr>
                <th>Name</th>
                <th>Year</th>
                <th>Genre</th>
                <th>Rating</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Name</td>
                    <td>@movie.Year</td>
                    <td><a asp-controller="Movies" asp-action="GetMoviesByGenre" asp-route-genreId="@movie.GenreId">@movie.Genre.Name</a></td>
                    <td>@movie.Rating</td>
                    <td>
                        <partial name="_MovieActionLinksPartial" model="@movie" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="col-sm-3">
        <vc:top-rated-movies lowest-rating="5" number-of-movies-to-display="10"></vc:top-rated-movies>
    </div>
</div>
