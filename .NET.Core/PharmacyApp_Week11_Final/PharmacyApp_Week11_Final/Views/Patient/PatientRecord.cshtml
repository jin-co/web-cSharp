@model PatientRecordViewModel

<h2>@Model.ActionName a patient</h2>

@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<form asp-action="PatientRecord" asp-route-nameGroupFilterId="@Model.SelectedGroupNameFilterId" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="@Model.Patient.PatientId" />

    <div class="form-group">
        <label asp-for="@Model.Patient.PatientName">Name:</label>
        <input type="text" asp-for="@Model.Patient.PatientName" class="form-control" />
        <span asp-validation-for="@Model.Patient.PatientName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Patient.PatientAddress1">Address 1:</label>
        <input type="text" asp-for="@Model.Patient.PatientAddress1" class="form-control" />
        <span asp-validation-for="@Model.Patient.PatientAddress1" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Patient.PatientAddress2">Address 2:</label>
        <input type="text" asp-for="@Model.Patient.PatientAddress2" class="form-control" />
        <span asp-validation-for="@Model.Patient.PatientAddress2" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Patient.PatientCity">City:</label>
        <input type="text" asp-for="@Model.Patient.PatientCity" class="form-control" />
        <span asp-validation-for="@Model.Patient.PatientCity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Patient.PatientState">State:</label>
        <input type="text" asp-for="@Model.Patient.PatientState" class="form-control" />
        <span asp-validation-for="@Model.Patient.PatientState" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Patient.PatientZipCode">Zip code:</label>
        <input type="text" asp-for="@Model.Patient.PatientZipCode" class="form-control" />
        <span asp-validation-for="@Model.Patient.PatientZipCode" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Patient.PatientPhone">Phone:</label>
        <input type="text" asp-for="@Model.Patient.PatientPhone" class="form-control" />
        <span asp-validation-for="@Model.Patient.PatientPhone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Patient.PatientContactFirstName">Contact First Name:</label>
        <input type="text" asp-for="@Model.Patient.PatientContactFirstName" class="form-control" />
        <span asp-validation-for="@Model.Patient.PatientContactFirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Patient.PatientContactLastName">Contact Last Name:</label>
        <input type="text" asp-for="@Model.Patient.PatientContactLastName" class="form-control" />
        <span asp-validation-for="@Model.Patient.PatientContactLastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Patient.DefaultHealthInsuranceId">Default Health Insurance:</label>
        <select asp-for="@Model.Patient.DefaultHealthInsuranceId" class="form-control">
            @foreach (HealthInsurance insurance in Model.HealthInsurances)
            {
                <option value="@insurance.HealthInsuranceId">@insurance.HealthInsuranceDescription</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Patient.DefaultPharmacyNumber">Default Pharmacy:</label>
        <select asp-for="@Model.Patient.DefaultPharmacyNumber" class="form-control">
            @foreach (PharmacyAccount account in Model.PharmacyAccounts)
            {
                <option value="@account.PharmacyNumber">@account.PharmacyDescription</option>
            }
        </select>
    </div>

    <div>
        <input type="submit" class="btn btn-primary" value="@Model.ActionName" />
        <a asp-action="PatientList" asp-route-nameGroupFilterId="@Model.SelectedGroupNameFilterId" class="btn btn-secondary">Cancel</a>
    </div>
</form>
