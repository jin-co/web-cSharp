@model List<Company>
@{
    ViewData["Title"] = "Companies";
}

<h1 class="jumbotron">
    @ViewData["Title"]
</h1>


<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Ticker Symbol</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.Name</td>
                <td>@i.Address</td>
                <td>@i.TickerSymbol</td>
                <td>
                    <a
                       asp-action="Edit">Edit</a>
                    |
                    <a
                       asp-action="Delete">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
