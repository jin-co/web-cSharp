@model Company
@{
    string title = ViewBag.Action + " Company";
    ViewBag.Title = title;
}
<h1 class="jumbotron">@title</h1>
<h2>@title</h2>

<form asp-controller="Company" asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" type="text" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Address">Company Address</label>
        <input asp-for="Address" type="text" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="TickerSymbol">Ticker</label>
        <input asp-for="TickerSymbol" type="text" class="form-control" />
    </div>

    <input type="hidden" asp-for="CompanyId" />
    <button type="submit" asp-action="Index" class="btn btn-primary">@title</button>
    <a asp-controller="Company" asp-action="Index" class="btn btn-primary">Cancel</a>

</form>