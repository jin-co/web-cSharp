@model List<TransactionRecordKbaek7943>
@{
    ViewData["Title"] = "Transactions";
}
<h1 class="jumbotron">@ViewData["Title"]</h1>

<h2>My Transactions</h2>
<a asp-controller="Transaction" asp-action="Add">Add New Transaction</a>

<!-- table start -->
<table class="table table-bordered table-striped table-responsive">
    <thead>
        <tr>
            <th>Ticker Symbol</th>
            <th>Transaction Type</th>
            <th>
                <a asp-controller="Home"
                   asp-action="Index"
                   asp-route-order="@ViewBag.Flag">
                    CompanyName
                </a>
            </th>
            <th>Quantity</th>
            <th>Share Price</th>
            <th>Commission Fee</th>
            <th>Gross Value</th>
            <th>Net Value</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <!-- shows all the data in the transaction record database -->
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.TicketSymbol</td>
                <td>@i.TrasactionType.Name</td>  
                <td>@i.CompanyName</td>
                <td>@i.Quantity</td>
                <td>$@i.SharePrice</td>
                <td>$@i.TrasactionType.Commission</td>
                <td>$@i.CalculateGrossValue()</td>
                <td>$@i.CalculateNetValue()</td>
                <td class="text-nowrap">
                    <a asp-controller="Transaction"
                       asp-action="Edit"
                       asp-route-id="@i.TransactionRecordKbaek7943Id"
                       asp-route-slug="@i.Slug">Edit</a>
                    |
                    <a asp-controller="Transaction"
                       asp-action="Delete"
                       asp-route-id="@i.TransactionRecordKbaek7943Id"
                       asp-route-slug="@i.Slug">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table><!-- /end table -->
