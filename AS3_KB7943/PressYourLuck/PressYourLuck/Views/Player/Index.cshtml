@model Player

<form asp-controller="Player" asp-action="Join" asp-route-id="2" class="" method="post">
    <div asp-validation-summary="All" class=""></div>

    <div class="form-group">
        <label asp-for="Name"
               class="control-label">Name</label>
        <input asp-for="Name"
               class="form-control w-25" type="text" />
    </div>
    
    <div class="form-group">
        <label asp-for="StartingCoins"
               class="control-label">Total Coins</label>
        <input asp-for="StartingCoins"
               class="form-control w-25" type="number" />
    </div>
    
    <button class="btn btn-primary">
        Join the Game!
    </button>
</form>
