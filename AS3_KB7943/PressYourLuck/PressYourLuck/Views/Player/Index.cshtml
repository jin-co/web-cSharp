@model Player


<div asp-validation-summary="All" class=""></div>
<form asp-controller="Player" asp-action="Index" class="" method="post">
    <div class="form-group">
        <label asp-for="Name"
               class="control-label">Name</label>
        <input asp-for="Name"
               class="form-control w-25" type="text" />
        <span asp-validation-for="Name"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="StartingCoins"
               class="control-label">Total Coins</label>
        <input asp-for="StartingCoins"
               class="form-control w-25" type="number" />
        <span asp-validation-for="StartingCoins"></span>
    </div>

    <input type="hidden" asp-for="PlayerId"/>
    
    <button type="submit" class="btn btn-primary">
        Join the Game!
    </button>
</form>
