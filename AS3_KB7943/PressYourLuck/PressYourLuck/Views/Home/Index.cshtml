@model CurrentGameModel

@{
    ViewData["Title"] = "Home Page";
}

<h1>Welcome, @ViewBag.Name !</h1>

<div asp-validation-summary="All"></div>
<form asp-action="Index" method="post">
    <div class="form-group">
        <p>How many coins would you like to wager?</p>
        <input asp-for="CurrentBettingAmount" 
               type="number" 
               class="form-control w-25" min="1" required/>
    </div>
    <button type="submit"
            class="btn btn-primary">Start Playing!</button>
</form>

