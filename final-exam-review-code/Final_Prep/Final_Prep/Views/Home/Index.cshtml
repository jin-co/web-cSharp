@model List<Manufacturer>
@{
    ViewData["Title"] = "Home Page";
}

<h3>@ViewData["Title"]</h3>

<a asp-controller="Manufacturer" asp-action="Add">Add M</a>
<a asp-controller="Car" asp-action="Add">Add C</a>
<a asp-controller="Part" asp-action="Add">Add P</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Website</th>
            <th>City</th>
            <th>Zip</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
	    {
        <tr>
            <td>
                <a asp-controller = "Car"
                   asp-action = "Index"
                   asp-route-manufacturerId = "@i.ManufacturerId">
                    @i.Name
                </a>
            </td>
            <td>
                <a target="_blank" href="@i.Website">@i.Website</a>
            </td>
            <td>@i.Address</td>
            <td>@i.City</td>
            <td>@i.ZipCode</td>
            <td>
                <a asp-controller="Manufacturer"
                   asp-action="Edit"
                   asp-route-id="@i.ManufacturerId">Edit</a>
            </td>
        </tr>
	    }        
    </tbody>
</table>
