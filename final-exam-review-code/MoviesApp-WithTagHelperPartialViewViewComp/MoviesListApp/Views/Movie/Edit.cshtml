@model Movie
@{
    string title = ViewData["Action"] + " Movie";
    ViewBag.Title = title;
}

<h2>@title</h2>

<form asp-controller="Movie" asp-action="@ViewData["Action"]" method="post">
    <!-- The placeholder for validation messages: -->
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Year">Year</label>
        <input asp-for="Year" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="GenreId">Genre</label>
        <!-- dropdown list filled with our Genres -->
        <select asp-for="GenreId" class="form-control">
            <option value="">Select a genre..</option>
            @foreach (Genre g in (List<Genre>)ViewData["Genres"])
            {
                <option value="@g.GenreId">@g.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Rating">Rating</label>
        <input asp-for="Rating" class="form-control">
    </div>

    <!-- hidden field for our MovieId: -->
    <input type="hidden" asp-for="MovieId" />

    <input type="submit" value="@ViewData["Action"]" class="btn btn-primary" />
    <a asp-controller="Movies" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>