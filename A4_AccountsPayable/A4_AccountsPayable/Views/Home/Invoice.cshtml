

<div class="container">
    <div class="row">
        <h4 class="text-left col-8">Prescriptions for </h4>

        @if (true)
        {
            <a asp-action="PatientList" asp-route-nameGroupFilterId=".NameGroupId" class="text-right col-4">Return to .GroupName Patients</a>
        }
        else
        {
            <a asp-action="PatientList" asp-route-nameGroupFilterId="0" class="text-right col-4">Return to Patient List</a>
        }
    </div>


    <div class="row">
        <span style="color:gray;" class="text-left col-7">Pharmacy: </span>
        <span style="color:gray;" class="text-right col-5">Health Insurance: </span>
    </div>

    @if (1 > 0)
    {
        <div class="row pt-5">
            <div class="col-3">
                <h4 class="font-weight-bold">Prescriptions:</h4>
                <ul class="nav nav-pills flex-column">
                    @*@foreach (var prescription in Prescriptions)
                    {
                        <li class="nav-item">
                            <a asp-action="PatientPrescriptionList"
                               asp-route-prescriptionId="@prescription.PrescriptionId"
                               class="nav-link (prescription.PrescriptionId)">Prescription #: @prescription.PrescriptionNumber</a>
                        </li>
                    }*@
                </ul>
            </div>
            <div class="col-3"></div>
            <div class="col-6">
                @if (true)
                {
                    <h4 class="font-weight-bold">Line Items for Prescription </h4>

                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Description</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @*@foreach (var lineItem in PrescriptionsLineItems)
                            {
                                <tr>
                                    <td>@lineItem.LineItemDescription</td>
                                    <td>@lineItem.LineItemAmount.ToString("C2")</td>
                                </tr>
                            }*@
                            @if (1 > 0)
                            {
                                <tr>
                                    <td>Total</td>
                                    <td>.PrescriptionTotal.ToString("C2")</td>
                                </tr>
                            }

                        </tbody>
                    </table>


                    <form method="post"
                          asp-action="AddNewPrescriptionLineItem"
                          asp-route-pharmacyNumber=""
                          asp-route-patientId=".PatientId"
                          asp-route-prescriptionId="">

                        <div class="row pb-2">
                            <label class="col-3">Description:</label>
                            <input type="text" name="description" class="col-9 form-control" />
                            <span class="text-danger"></span>
                        </div>

                        <div class="row pb-2">
                            <label class="col-3">Amount:</label>
                            <input type="text" name="amount" class="col-9 form-control" />
                            <span class="text-danger"></span>
                        </div>

                        <input class="btn btn-outline-info" type="submit" value="Add new line item" />
                    </form>
                }
            </div>
        </div>
    }
    else
    {
        <div class="jumbotron pt-5 text-center">
            <h2>No Prescriptions for Patient: </h2>
        </div>
    }
</div>


