@model VendorListViewModel
@{
    ViewData["Title"] = "Vendors";
}

<h2 class="jumbotron">
    @ViewData["Title"]
</h2>

<div class="row pb-3">
    <div class="text-left col-2">
        <a class="btn btn-outline-success"
           asp-route-actionType="Add"
           asp-route-groupNameFilterId=""
           asp-action="PatientRecord">Add new vendor</a>
    </div>

    <div class="text-right col-10">
        <ul class="nav nav-pills">
            @foreach (var i in Model.VendorNameFilter)
            {
                <li class="nav-item">
                    <a asp-action="VendorList" 
                       asp-route-vendorFilter="@i"                        
                       class="nav-link">@i</a>
                </li>
            }
        </ul>
    </div>
</div>

@if (TempData["DeletedPatientName"] != null && TempData["PatientID"] != null)
{
    <div class="text-right pb-5">
        <span class="alert alert-info pb-3">The patient "@TempData["DeletedPatientName"]" was deleted. <a asp-action="UndoDelete" asp-route-patientId="@TempData["PatientID"]">Undo</a> this delete.</span>
    </div>
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model.Vendors)
        {
            <tr>
                <td>@i.VendorName</td>
                <td>@i.VendorAddress1</td>
                <td>
                    <a asp-action=""
                       asp-route-patientId="@i.VendorId">Invoice</a>

                    <span class="linkSpacer">|</span>

                    <a asp-action="PatientRecord"
                       asp-route-actionType="Edit"
                       asp-route-groupNameFilterId=""
                       asp-route-id="@i.VendorId">Edit</a>

                    <span class="linkSpacer">|</span>

                    <a asp-action="SoftDelete"
                       asp-route-id="@i.VendorId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

