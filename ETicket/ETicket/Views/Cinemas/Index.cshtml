@model IEnumerable<Cinema>

@{
    ViewData["Title"] = "List of Cinemas";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(m => m.Logo)</th>
                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                    <th>@Html.DisplayNameFor(m => m.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var i in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img src="@i.Logo" style="max-width: 150px;" class="rounded-circle" />
                        </td>
                        <td class="align-middle">
                            @i.Name
                        </td>
                        <td class="align-middle">
                            @i.Description
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"
                               asp-action="Edit"
                               asp-route-id="id">
                                <i class="bi bi-pencil-square">Edit</i>
                            </a> |
                            <a class="btn btn-outline-primary"
                               asp-action="Details"
                               asp-route-id="id">
                                <i class="bi bi-eye">Details</i>
                            </a> |
                            <a class="btn btn-danger text-light"
                               asp-action="Delete"
                               asp-route-id="id">
                                <i class="bi bi-trash">Delete</i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="text-white" style="position: fixed; right: 25px; bottom:20px">
    <a asp-action="Create"
       class="btn btn-success">
        <i class="bi bi-plus-circle"></i>
        Add new
    </a>
</div>

