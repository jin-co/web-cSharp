
@model Bmi
@{
    ViewData["Title"] = "Future Value Calculator";
}
<h1 class="badge-dark">
    @ViewData["Title"]
</h1>

<div class="container mt-5">
    <form asp-action="Index" method="post"
          class="py-3">
        <div class="form-group row">
            <label class="form-label col-2">Monthly Investment: </label>
            <input asp-for="Weight" class="col-10" type="number" />
        </div>

        <div class="form-group row">
            <label class="form-label col-2">Yearly Interest Rate: </label>
            <input asp-for="Height" class="col-10" type="number" />
        </div>

        <div class="form-group row">
            <p>Future Value: @ViewBag.Bmi</p>
        </div>

        <button class="btn btn-primary btn-block mb-1">Calculate</button>
        <a asp-action="Index" class="btn btn-danger btn-block">Clear</a>
    </form>

</div>
