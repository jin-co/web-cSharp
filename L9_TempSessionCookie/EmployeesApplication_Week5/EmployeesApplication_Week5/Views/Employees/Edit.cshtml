@model EmployeesApplication_Week5.Models.Employee

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EmployeeID" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <!-- Retrieve list of Roles from the database which are inserted into a ViewBag property called "Roles" -->
            <div class="form-group">
                <label asp-for="RoleID" class="control-label">Role</label>
                <select class="form-control" asp-for="RoleID" asp-items="@(new SelectList(ViewBag.Roles, "RoleID", "Name"))">
                </select>
                <span asp-validation-for="RoleID" class="text-danger"></span>
            </div>
            <!-- Retrieve list of Company entries from the database which are inserted into a ViewBag property called "Companies" -->
            <div class="form-group">
                <label asp-for="CompanyID" class="control-label">Company</label>
                <select class="form-control" asp-for="CompanyID" asp-items="@(new SelectList(ViewBag.Companies, "CompanyID", "Name"))">
                </select>
                <span asp-validation-for="RoleID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
