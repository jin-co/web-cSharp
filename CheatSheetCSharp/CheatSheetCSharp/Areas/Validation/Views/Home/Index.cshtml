@model UserModel
@{
    ViewData["Title"] = "Validator";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div asp-validation-summary="All" class="alert-danger"></div>

<form asp-area="Validation" 
      asp-controller="Home"
      asp-action="Index" method="post">
    <div class="container">
        <div class="form-group row">
            <label asp-for="FirstName" class="col-sm-2 col-form-label">First Name: </label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="bg-danger text-light"></span>
        </div>

        <div class="form-group row">
            <label asp-for="LastName" class="col-sm-2 col-form-label">Last Name: </label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="bg-danger text-light"></span>
        </div>

        <div class="form-group row">
            <label asp-for="Age" class="col-sm-2 col-form-label">Age: </label>
            <input asp-for="Age" class="form-control" />
            <span asp-validation-for="Age" class="bg-danger text-light"></span>
        </div>

        <div class="form-group row">
            <label asp-for="Address" class="col-sm-2 col-form-label">Address: </label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="bg-danger text-light"></span>
        </div>

        <div class="form-group row">
            <label asp-for="PhoneNumber" class="col-sm-2 col-form-label">Phone Number: </label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="bg-danger text-light"></span>
        </div>
    </div>

    <div class="alert-primary">
        <p>@ViewBag.Result</p>
    </div>

    <input type="submit" class="btn btn-primary" />
    <a asp-area="Validation" 
       asp-controller="Home"
       asp-action="Index" class="btn btn-secondary">Clear</a>
</form>
