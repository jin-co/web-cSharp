@{ 
    ViewData["Title"] = "Future Value Calculator";
}
<h1 class="badge-dark">
    @ViewData["Title"]
</h1>

<div class="container mt-5">
    <form class="py-3">
        <div class="form-group row">
            <label class="form-label col-2">Monthly Investment: </label>
            <input class="col-10" type="text" />
        </div>

        <div class="form-group row">
            <label class="form-label col-2">Yearly Interest Rate: </label>
            <input class="col-10" type="text" />
        </div>

        <div class="form-group row">
            <label class="form-label col-2">Number of Years: </label>
            <input class="col-10" type="text" />
        </div>

        <div class="form-group row">
            <label class="form-label col-2">Future Value: </label>
            <input class="col-10" type="text" />
        </div>

        <button class="btn btn-primary btn-block mb-1">Calculate</button>
        <a class="btn btn-danger btn-block">Clear</a>
    </form>

</div>