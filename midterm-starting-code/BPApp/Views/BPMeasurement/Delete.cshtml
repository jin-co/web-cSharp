@model BPMeasurement
@{
    string title = ViewBag.Action + " BP Measurement";
    ViewBag.Title = title;
}

<h2>@title</h2>

<h2>Confirm Delete</h2>
<h3>@Model.BPMeasurementId (taken on @Model.MeasurementDate)</h3>

<form asp-controller="BPMeasurement" asp-action="DeleteById" method="post" enctype="application/x-www-form-urlencoded">
    <input type="hidden" asp-for="BPMeasurementId" />

    <button type="submit" class="btn btn-primary">Delete</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>
