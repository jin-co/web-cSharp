@model BPMeasurement
@{
    string title = ViewBag.Action + " BP Measurement";
    ViewBag.Title = title;
}

<h2>@title</h2>

<!-- Validation error messages -->
<div asp-validation-summary="All" class="alert-danger"></div>

<form asp-controller="BPMeasurement" asp-action="@ViewBag.Action" method="post" enctype="application/x-www-form-urlencoded">

    <!-- Complete this form to have input fields for the remaining properties of a BPMeasurement... -->

    <div class="form-group">
        <label asp-for="Systolic">Systolic</label>
        <input type="number" asp-for="Systolic"
               class="form-control" value="@Model.Systolic" />
    </div>

    <div class="form-group">
        <label asp-for="Diastolic">Diastolic</label>
        <input type="number" asp-for="Diastolic"
               class="form-control" value="@Model.Diastolic" />
    </div>

    @if (ViewBag.Action == "Edit")
    {
        <div class="form-group">
            <label asp-for="PositionId">Position</label>
            <select asp-for="PositionId" class="form-control">
                <option value="Place holder"></option>
                @foreach (var i in ViewBag.Positions)
                {
                    <option value="@i.Name">@i.Name</option>
                }
            </select>
        </div>
    }

    <div class="form-group">
        <label asp-for="MeasurementDate">Date of measurement</label>
        <input type="datetime" id="datepicker" asp-for="MeasurementDate"
               class="form-control" value="@Model.MeasurementDate.ToString("d")" />
    </div>

    <input type="hidden" asp-for="BPMeasurementId" />

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>