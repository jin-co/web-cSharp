@model HeartRateMeasurement
@{
    string title = ViewBag.Action + " Heart Rate measurement";
    ViewData["Title"] = title;
}

<h2>@title</h2>
<form asp-controller="HeartRateMeasurement" asp-action="@ViewBag.Action" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="BPMValue">BPM</label>
        <input type="text" asp-for="BPMValue" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="BPMValue">Measurement date</label>
        <input type="datetime" asp-for="MeasurementDate" class="form-control" value="@Model.MeasurementDate.ToString("d")" />
    </div>

    <input type="hidden" asp-for="HeartRateMeasurementId" />

    <input type="submit" class="btn btn-primary" value="@ViewBag.Action" />
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>
