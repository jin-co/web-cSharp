@model TopRatedViewModel

<div class="img-thumbnail card shadow">
    <h3 class="bg-warning rounded text-white text-center">Top Rated Movies</h3>
    <div class="card-body bg-light">
        <h6 class="card-title">*With a rating of at least @Model.LowestRatingToDisplay</h6>

        <ul class="card-text">
            @for (int i = 0; i < Model.NumberOfMoviesToDisplay; i++)
            {
                <li>@Model.Movies[i].Name (@Model.Movies[i].Year @Model.Movies[i].Genre.Name)</li>
            }
        </ul>
    </div>
</div>
